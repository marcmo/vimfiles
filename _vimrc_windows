" windows
if has('gui_running')
  set guifont=courier_New:h8
  set lines=75
  set columns=200
endif

function! OpenInTerminal()
  cd %:p:h
  !start cmd %<CR>
endfunction
function! OpenInGhci()
  !start ghci -i.. %
endfunction
function! OpenWithLua()
  !start lua -i %
endfunction
let g:haddock_browser = "c:\Programs\firefox3\firefox.exe"
let g:haddock_browser_callformat = "%s -a Firefox %s"
