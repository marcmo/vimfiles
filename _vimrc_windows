" windows
if has('gui_running')
  set encoding=utf-8
  " powerline font downloaded from https://github.com/Lokaltog/powerline-fonts
  set guifont=Ubuntu_Mono_derivative_Powerlin:h14
  set lines=85
  set columns=200
endif

function! OpenInTerminal()
  cd %:p:h
  !start cmd %<CR>
endfunction
function! OpenInGhci()
  !start ghci -i.. %
endfunction
function! OpenWithLua()
  !start lua -i %
endfunction
let g:haddock_browser = "c:\Programs\firefox3\firefox.exe"
let g:haddock_browser_callformat = "%s -a Firefox %s"
map <MiddleMouse> <Nop>
imap <MiddleMouse> <Nop>
map <2-MiddleMouse> <Nop>
imap <2-MiddleMouse> <Nop>
map <3-MiddleMouse> <Nop>
imap <3-MiddleMouse> <Nop>
map <4-MiddleMouse> <Nop>
imap <4-MiddleMouse> <Nop>

