" macos
let $PATH=$PATH . ":/opt/local/bin"
set listchars=tab:▸\ ,eol:¬ " Use the same symbols as TextMate for tabstops and EOLs
if has('gui_running')
  set guifont=Monaco:h11
  set lines=60
  set columns=200
endif
function! OpenInTerminal()
  cd %:p:h
  !term
endfunction
function! OpenInGhci()
  cd %:p:h
  !term ghci -i.. %
endfunction
let g:haddock_browser = "open"
let g:haddock_browser_callformat = "%s -a Firefox %s"
let g:haddock_docdir="/Library/Frameworks/GHC.framework/Versions/612/usr/share/doc/ghc/html/"
" moving lines, only for mac because of stupid option key behavior
" <A-j> == ∆ (for moving down) 
" <A-k> == ˚ (for moving up)
nnoremap ∆ mz:m+<CR>`z==
nnoremap ˚ mz:m-2<CR>`z==
inoremap ∆ <Esc>:m+<CR>==gi
inoremap ˚ <Esc>:m-2<CR>==gi
vnoremap ∆ :m'>+<CR>gv=`<my`>mzgv`yo`z
vnoremap ˚ :m'<-2<CR>gv=`>my`<mzgv`yo`z
